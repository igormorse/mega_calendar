
<% if @issue.safe_attribute?('start_date') || @issue.safe_attribute?('due_date') %>
    <%
        js_format = 'H:i'
        js_val_start = ''
        js_val_end = ''
        ticket_time = TicketTime.find_by_issue_id(@issue.id)
        if !@issue.new_record? && !ticket_time.blank? && !ticket_time.time_begin.blank? && !ticket_time.time_end.blank?
            js_val_start = ticket_time.time_begin.to_time.strftime("%H:%M").to_s
            js_val_end = ticket_time.time_end.to_time.strftime("%H:%M").to_s

        end
    %>
    <script type="text/javascript">
        time_start = '<%= js_val_start %>';
        time_end = '<%= js_val_end %>';
        
        if (time_start !== "")
            $("#time_begin").val(time_start);
        if (time_end !== "")
            $("#time_end").val(time_end);
    </script>
<% end %>