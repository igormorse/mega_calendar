  
  <%= 
  
    issue_fields_rows do |rows|
    
        unless @issue.disabled_core_fields.include?('time_begin') || @issue.hidden_attribute?('time_begin')
            tt = TicketTime.where({:issue_id => @issue.id}).first rescue nil

            if !tt.blank? && !tt.time_begin.blank?
                rows.left l(:field_time_begin), tt.time_begin.strftime(' %H:%M'), :class => 'time_begin'
            elsif (!tt.blank? && tt.time_begin.blank?)
                rows.left l(:field_time_begin), '00:00', :class => 'time_begin'
            end
        end

        unless @issue.disabled_core_fields.include?('time_end') || @issue.hidden_attribute?('time_end')
            tt = TicketTime.where({:issue_id => @issue.id}).first rescue nil

            if !tt.blank? && !tt.time_begin.blank?
                rows.right l(:field_time_end), tt.time_end.strftime(' %H:%M'), :class => 'time_end'
            elsif (!tt.blank? && tt.time_begin.blank?)
                rows.right l(:field_time_end), '00:00', :class => 'time_end'
            end
        end
    end
  %>